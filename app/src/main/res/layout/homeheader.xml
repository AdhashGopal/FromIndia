<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/app_green">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/homeIM"
        android:layout_width="@dimen/dimen_home_wh_40"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_10"
        android:src="@drawable/ic_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.appcompat.widget.AppCompatImageView>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_20"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="@+id/homeIM"
        app:layout_constraintStart_toEndOf="@+id/homeIM"
        app:layout_constraintTop_toTopOf="@+id/homeIM"></androidx.appcompat.widget.AppCompatImageView>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/dimen_35"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/padding_10"
        android:src="@drawable/ic_menu_close"
        app:layout_constraintBottom_toBottomOf="@+id/homeIM"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/homeIM">

    </androidx.appcompat.widget.AppCompatImageView>


</androidx.constraintlayout.widget.ConstraintLayout>