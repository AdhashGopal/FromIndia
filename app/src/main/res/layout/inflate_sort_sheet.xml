<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_gery">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_5dp"
            android:orientation="vertical"
            android:padding="@dimen/padding_5dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_5dp"
                android:text="Sort By"
                android:textColor="@color/black"></androidx.appcompat.widget.AppCompatTextView>

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_5dp"
                android:background="@drawable/bg_cardview"
                android:padding="@dimen/padding_10"
                android:paddingTop="@dimen/padding_5dp">

                <RadioButton
                    android:id="@+id/popularityRB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_margin="4dp"
                    android:layoutDirection="rtl"
                    android:text="Popularity"
                    android:textAlignment="textStart"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/priceLToHRB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_margin="4dp"
                    android:layoutDirection="rtl"
                    android:text="Price -- Low to High"
                    android:textAlignment="textStart"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/priceHToLRB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_margin="4dp"
                    android:layoutDirection="rtl"
                    android:text="Price -- High to Low"
                    android:textAlignment="textStart"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/newestFirstRB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_margin="4dp"
                    android:layoutDirection="rtl"
                    android:text="Newest First"
                    android:textAlignment="textStart"
                    android:textSize="14sp" />


            </RadioGroup>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>