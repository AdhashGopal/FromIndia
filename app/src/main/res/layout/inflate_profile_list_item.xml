<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/mainItemLAY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_5dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/menuItemIM"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:src="@drawable/ic_my_account"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.appcompat.widget.AppCompatImageView>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/menuItemNameTXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_toRightOf="@+id/menuItemIM"
            android:gravity="center"
            android:padding="@dimen/padding_4"
            android:text="My Account"></androidx.appcompat.widget.AppCompatTextView>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/menuItemNameTXT"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginTop="@dimen/padding_15"
            android:layout_toRightOf="@+id/menuItemIM"
            android:background="@color/light_gery"></View>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>